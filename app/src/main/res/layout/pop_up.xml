<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="200dp"
    android:layout_marginBottom="200dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/popbackground">

        <TextView
            android:id="@+id/poptext"
            android:layout_width="103dp"
            android:layout_height="174dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="51dp"
            android:fontFamily="@font/alegreya_black_italic"
            android:text="Make pastries now using Baked Love!"
            android:textAlignment="center"
            android:textColor="#855002"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/poptext2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.354" />

        <TextView
            android:id="@+id/poptext2"
            android:layout_width="267dp"
            android:layout_height="66dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/alegreya_black_italic"
            android:text="All you have to do is pick a base and add a flavor!"
            android:textAlignment="center"
            android:textColor="#855002"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

        <Button
            android:id="@+id/popbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#855002"
            android:text="Proceed"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poptext2"
            app:layout_constraintVertical_bias="0.428" />


</androidx.constraintlayout.widget.ConstraintLayout>